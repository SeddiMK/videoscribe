# ========================
# VideoScribe Configuration
# ========================

# Название проекта Docker
COMPOSE_PROJECT_NAME=videoscribe

# Порт для frontend (внутренний порт Docker)
# Nginx будет проксировать на этот порт
NGINX_PORT=3100

# Node.js настройки
NODE_ENV=production
NODE_OPTIONS=--max-old-space-size=4096
NPM_CONFIG_REGISTRY=https://registry.npmjs.org/

# Пути к папкам
UPLOADS_DIR=/app/uploads
RESULTS_DIR=/app/results
LOGS_DIR=/app/logs

# API настройки
API_URL=https://videoscribe.zvon.online/api
API_TIMEOUT=3600000

# Whisper настройки
WHISPER_MODEL=base
WHISPER_LANGUAGE=ru
WHISPER_DEVICE=cpu

# Лимиты
MAX_FILE_SIZE=524288000
MAX_VIDEO_DURATION=3600
CLEANUP_INTERVAL=86400

# WebSocket (для real-time обновлений)
WS_ENABLED=true
WS_PORT=3101
